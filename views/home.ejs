<%- include("partials/header") -%>

<h1>Latest Posts</h1>
<hr>
<% totalPosts.forEach((post)=>{ %>
<div class="post">
    <h2><%= post.title %></h2>
    <span><%=post.publishDate%></span></span>
    <p><%=post.content.substring(0,400) +"...  " %><a href="/posts/<%=post._id%>" >Read more</a></p>
</div>
<%});%>
<%- include("partials/footer") -%>